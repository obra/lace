{
  "enabled": true,
  "retentionPolicy": {
    "maxSnapshots": 2,
    "maxAge": "1 day"
  },
  "performance": {
    "excludePatterns": [
      "node_modules/**",
      "*.log"
    ],
    "compressionLevel": 6,
    "backgroundPruning": true
  },
  "integration": {
    "autoSnapshotOnToolUse": true,
    "conversationTurnsToCapture": 5,
    "toolUsesToCapture": 10
  }
}