{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "../../packages/core/src/*"
      ]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "node",
      "vite/client",
      "react",
      "react-dom"
    ],
    "strict": true,
    "target": "ES2023",
    "skipLibCheck": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".react-router/types/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "stories_parked",
    "scripts/**"
  ]
}
