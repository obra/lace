{
  "enabled": true,
  "retentionPolicy": {
    "maxAge": "7 days",
    "maxSnapshots": 1000,
    "keepCheckpoints": true
  },
  "performance": {
    "excludePatterns": [
      "node_modules/**",
      "*.log"
    ],
    "compressionLevel": 6,
    "backgroundPruning": true
  },
  "integration": {
    "autoSnapshotOnToolUse": true,
    "conversationTurnsToCapture": 5,
    "toolUsesToCapture": 10
  }
}