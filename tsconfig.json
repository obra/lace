{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxFactory": "React.createElement"
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/web" }
  ],
  "exclude": ["node_modules", "dist", "knip.config.ts"]
}
