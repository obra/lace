{
  "name": "lace-monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Lace AI coding assistant monorepo",
  "author": "Jesse Vincent <jesse@fsck.com>",
  "engines": {
    "node": ">=20.18.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/core && npm run build --workspace=packages/web",
    "build:vfs": "npx tsx scripts/generate-vfs.ts",
    "build:bundle": "bun build build/lace-standalone.ts --target node --outfile dist/lace-server.js",
    "build:executable": "bun build --compile dist/lace-server.js --outfile lace",
    "build:clean": "rm -rf dist packages/core/dist packages/web/.next && npm run build",
    "build:standalone": "npx tsx scripts/build-simple.ts",
    "prebuild:standalone:clean": "rm -rf build packages/web/.next packages/web/server.js",
    "build:standalone:clean": "npx tsx scripts/build-simple.ts",
    "prebuild:macos": "npm run build",
    "build:macos": "npx tsx scripts/build-simple.ts --bundle --target bun-darwin-arm64 --name Lace",
    "prebuild:macos:signed": "npm run build", 
    "build:macos:signed": "npx tsx scripts/build-simple.ts --bundle --target bun-darwin-arm64 --name Lace --sign",
    "dev": "npm run dev --workspace=packages/web",
    "typecheck": "npm run typecheck --workspace=packages/core && npm run typecheck --workspace=packages/web",
    "lint": "npm run lint --workspace=packages/core && npm run lint --workspace=packages/web",
    "lint:fix": "npm run lint:fix --workspace=packages/core && npm run lint:fix --workspace=packages/web",
    "format": "npm run format --workspace=packages/core && npm run format --workspace=packages/web",
    "knip": "npx knip --isolate-workspaces",
    "knip:ci": "npx knip --isolate-workspaces --reporter json > knip-report.json || true",
    "prepare": "husky",
    "test": "npm run test --workspace=packages/core && npm run test --workspace=packages/web",
    "test:watch": "npm run test:watch --workspace=packages/core",
    "test:coverage": "npm run test:coverage --workspace=packages/core && npm run test:coverage --workspace=packages/web",
    "update-catalogs": "npx tsx scripts/update-provider-catalogs.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.49.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.34.0",
    "@vercel/nft": "^0.30.0",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "lint-staged": "^16.1.1",
    "msw": "^2.10.4",
    "playwright": "^1.49.0",
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.3"
  }
}
