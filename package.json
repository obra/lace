{
  "name": "lace",
  "version": "0.1.0",
  "description": "Your lightweight agentic coding environment",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "lace": "./src/ui/lace-cli.js"
  },
  "scripts": {
    "start": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" tsx src/ui/lace-cli.js",
    "dev": "./scripts/dev.sh",
    "dev:watch": "npm run web:build && concurrently \"npm run web:watch\" \"NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" tsx --watch src/ui/lace-cli.js\"",
    "ui": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" tsx src/ui/lace-cli.js",
    "web:dev": "vite web",
    "web:build": "vite build web",
    "web:build:silent": "VITE_SILENT=true node scripts/build-web.js",
    "web:watch": "vite build web --watch",
    "web:preview": "vite preview web",
    "build": "npm run web:build",
    "test": "npm run test:jest && npm run test:node",
    "test:jest": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" jest",
    "test:watch": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" jest --watch",
    "test:node": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" node --test test/unit/*.test.js",
    "lint": "eslint src test",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@inkjs/ui": "^2.0.0",
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fullscreen-ink": "^0.0.2",
    "helmet": "^8.1.0",
    "highlight.js": "^11.11.1",
    "ink": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "jsdiff": "^1.1.1",
    "open": "^10.1.2",
    "prompts": "^2.4.2",
    "react": "^19.0.0",
    "simple-git": "^3.27.0",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.1",
    "axios": "^1.9.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.0.0",
    "ink-testing-library": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-test-renderer": "^19.1.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "development",
    "tool",
    "automation"
  ],
  "author": "Jesse",
  "license": "MIT"
}
