{
  "name": "LACE - A lightweight agentic coding environment",
  "version": "0.0.1",
  "type": "module",
  "author": "Jesse Vincent <jesse@fsck.com>",
  "bin": {
    "lace": "./dist/cli.js",
    "debug-thread": "./dist/debug-thread.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias && cp -r src/config/prompts dist/config/ 2>/dev/null || true",
    "start": "npm run build && node dist/cli.js",
    "debug-thread": "npm run build && node dist/debug-thread.js",
    "test": "vitest",
    "test:integration": "vitest run \"integration\"",
    "test:unit": "vitest run --exclude=\"**/*{e2e,integration}*\"",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck && eslint src",
    "lint:fix": "npm run typecheck && eslint src --fix",
    "format": "prettier --write \"src\"",
    "prepare": "husky",
    "docker:build": "docker build -t lace-test .",
    "docker:run": "docker run -it --rm lace-test",
    "docker:shell": "docker run -it --rm lace-test /bin/bash",
    "web:dev": "cd packages/web && npm run dev",
    "web:build": "cd packages/web && npm run build",
    "web:start": "cd packages/web && npm run start",
    "web:install": "cd packages/web && npm install",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@inkjs/ui": "^2.0.0",
    "@lmstudio/sdk": "^1.2.1",
    "@modelcontextprotocol/sdk": "^1.13.2",
    "@types/glob": "^8.1.0",
    "@types/marked": "^5.0.2",
    "@types/react": "^18.3.1",
    "@types/sax": "^1.2.7",
    "better-sqlite3": "^11.10.0",
    "cli-highlight": "^2.1.11",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "fullscreen-ink": "^0.0.2",
    "glob": "^11.0.3",
    "highlight.js": "^11.11.1",
    "ink": "github:obra/ink#v5.2.1-background-colors",
    "ink-autocomplete": "^0.0.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "mustache": "^4.2.0",
    "ollama": "^0.5.16",
    "openai": "^4.77.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sax": "^1.4.1",
    "turndown": "^7.2.0",
    "zod": "^3.25.69",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/marked-terminal": "^6.1.1",
    "@types/mustache": "^4.2.5",
    "@types/node": "^22.16.0",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-vitest": "^0.5.4",
    "execa": "^9.6.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.1",
    "node-pty": "^1.0.0",
    "playwright": "^1.49.0",
    "prettier": "^3.5.3",
    "react-devtools-core": "^4.28.5",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.3"
  }
}
