{
  "name": "lace",
  "version": "0.1.0",
  "description": "Your lightweight agentic coding environment",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "lace": "./src/ui/lace-cli.js"
  },
  "scripts": {
    "start": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" tsx src/ui/lace-cli.js",
    "dev": "./scripts/dev.sh",
    "ui": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" tsx src/ui/lace-cli.js",
    "test": "npm run test:with-mocks && npm run test:no-mocks",
    "test:with-mocks": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" jest",
    "test:no-mocks": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" jest --config jest.integration.config.js",
    "test:watch": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" jest --watch",
    "test:jest": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --disable-warning=ExperimentalWarning\" jest",
    "lint": "eslint src test",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@inkjs/ui": "^2.0.0",
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "commander": "^12.0.0",
    "fullscreen-ink": "^0.0.2",
    "highlight.js": "^11.11.1",
    "ink": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "jsdiff": "^1.1.1",
    "open": "^10.1.2",
    "prompts": "^2.4.2",
    "react": "^19.0.0",
    "simple-git": "^3.27.0",
    "sqlite3": "^5.1.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/ink-testing-library": "^1.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.1.0",
    "ink-testing-library": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-resolve": "^30.0.0-beta.3",
    "jest-ts-webcompat-resolver": "^1.0.1",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "development",
    "tool",
    "automation"
  ],
  "author": "Jesse",
  "license": "MIT"
}
